{% extends 'base.html.twig' %}

{% block title %}{{ controller_name }}{% endblock %}

{% block body %}
    <style>
        .event_affichage_top {
            background: url( {{asset("uploads/#{ evenement.affiche }")}} ) !important;
            background-repeat: no-repeat !important;
            background-position: center !important;
            background-size: 200% !important;
        }
    </style>
    <div class="event_affichage_top">
        <div class="event_grid_1">
            <div class="event_affiche">
                <img class="test" loading="lazy" src="{{ asset("uploads/#{ evenement.affiche }") }}"
                     alt="Image de {{ evenement.nom }}">
            </div>
            <div class="event_title">
                <h1 id="event_nom">{{ evenement.nom }}</h1>
                <div><img src="" alt="star">
                    <h3>{{ evenement.realisateur }}</h3>
                </div>
            </div>
        </div>
    </div>
    <div class="event_info">
        <div class="event_info_left">
            <h4>Présentation</h4>
            <p>{{ evenement.description }}</p>
            <h4>Casting</h4>
            <p>{{ evenement.cast }}</p>
            <h4>En savoir plus sur le lieu</h4>
            <p>{{ evenement.lieu.nom }}</p>
            <p>{{ evenement.lieu.adresse }}</p>
            <p>{{ evenement.lieu.capacite }}</p>
            <iframe class="iframe_map" src="{{ evenement.lieu.iframe }}"></iframe>

            <h2>Suggestions</h2>
            <div>
                CARDS A METTRE ICI
            </div>
        </div>
        <div class="event_info_right">
            <div>
                <h5 class="event_info_right_prix">{{ evenement.prix }}€</h5>
                <p class="event_info_right_livraison">livraison instantanée par mail</p>
            </div>
            <div>
                <p class="event_info_right_revertion">Réservation</p>
                <p class="event_info_right_date">pour le 31/12/22</p>
            </div>
            <div>
                <div class="selecteur_nb">
                    <button onclick="this.parentNode.querySelector('input[type=number]').stepDown()">-</button>
                    <input type="number" value="1" min="1" max="99" id="event_quantite">
                    <input type="hidden" id="id" value="{{ evenement.id }}">
                    <button onclick="this.parentNode.querySelector('input[type=number]').stepUp()"
                            class="plus">+</button>
                </div>
                <button class="ajout_panier ajout_panier-reverse" id="ajout">Acheter maintenant <i
                            class="fa-solid fa-ticket"></i></button>
                <button class="ajout_panier" id="btn_ajout">Ajouter au panier <i class="fa-solid fa-cart-shopping"></i></button>
            </div>
        </div>
    </div>
