                        <p class="pannier_nombre">0</p>
                    </div>
                </div>
                <p>Panier</p>
            </div>
        </a>
        <a href="{{ path('app_profil') }}">
            <div class="container_compte">
                {% if app.user %}
                {% if app.user.email | length > 20 %}
                    <style>
                        .container_compte {
                            background: red;
                        }
                    </style>
                {% endif %}
                    <p>{{ app.user.email}}</p>
                {% else %}
                    <p>Non connecté</p>
                {% endif %}
                <p>Compte</p>
            </div>
        </a>
        {% if app.user %}
            <a href="{{ path('app_logout') }}">
                Se déconnecter
            </a>
        {% endif %}
    </div>
