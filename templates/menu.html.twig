            </select>
            <input class="search_bar" type="text" placeholder="tapez votre recherche" name="recherche">
            <button class="chercher" type="submit"><i class="fa-solid fa-magnifying-glass"></i></button>
        </form>
    </div>
    <div class="container_navbar_right">
        <a href="{{ path('app_panier') }}">
            <div class="panier">
                <div class="conteur_cart"><img src="{{ asset('icon/shopping-cart.png') }}" alt="">
