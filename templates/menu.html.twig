                    <style>
                        #account::before {
                            content: "";
                            width: 40%;
                            height: 0.9rem;
                            background: linear-gradient(270deg, rgb(20, 12, 16) 15.84%, rgba(20, 12, 16, 0.001) 105.94%);
                            position: absolute;
                            right: 0;
                            top: 50%;
                            transform: translateY(-50%);
                        }
                    </style>
                {% endif %}
                    <p id="account" class="noselect">{{ app.user.email }}</p>
                {% else %}
                    <p class="noselect">Non connecté</p>
                {% endif %}
                <p class="noselect">Compte <i class="fa-solid fa-caret-down"></i></p>
            </div>
            <div id="dropdown">
                {% if app.user %}
                    <a href="{{ path('app_profil') }}" class="dropdown_link"><i class="fa-solid fa-user userpicto"></i> Compte</a>
